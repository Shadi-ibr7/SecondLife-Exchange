# Configuration commune
NODE_ENV=development

# Base de données PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=secondlife
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/secondlife

# Backend API
API_PORT=4000
JWT_ACCESS_SECRET=dev_access_secret_change_in_production
JWT_REFRESH_SECRET=dev_refresh_secret_change_in_production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# IA Gemini
GEMINI_API_KEY=your_gemini_api_key_here

# Stockage d'images Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Cache Redis
REDIS_URL=redis://localhost:6379

# Frontend Next.js
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_APP_NAME=SecondLife Exchange
NEXT_PUBLIC_APP_DESCRIPTION=Plateforme d'échange d'objets avec suggestions IA

# Push notifications Firebase
NEXT_PUBLIC_FCM_VAPID_KEY=your_web_push_vapid_key
NEXT_PUBLIC_FCM_SENDER_ID=your_firebase_sender_id

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
