{
  "auth-register": {
    "type": "object",
    "properties": {
      "email": {
        "type": "string",
        "format": "email"
      },
      "password": {
        "type": "string",
        "minLength": 10,
        "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@$!%*?&])[A-Za-z\\d@$!%*?&]"
      },
      "displayName": {
        "type": "string",
        "minLength": 2,
        "maxLength": 50
      }
    },
    "required": [
      "email",
      "password",
      "displayName"
    ],
    "additionalProperties": false
  },
  "auth-login": {
    "type": "object",
    "properties": {
      "email": {
        "type": "string",
        "format": "email"
      },
      "password": {
        "type": "string",
        "minLength": 1
      }
    },
    "required": [
      "email",
      "password"
    ],
    "additionalProperties": false
  },
  "token-response": {
    "type": "object",
    "properties": {
      "accessToken": {
        "type": "string"
      },
      "refreshToken": {
        "type": "string"
      },
      "user": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "displayName": {
            "type": "string"
          },
          "avatarUrl": {
            "type": "string",
            "nullable": true
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "USER",
                "ADMIN"
              ]
            }
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "id",
          "email",
          "displayName",
          "avatarUrl",
          "roles",
          "createdAt"
        ],
        "additionalProperties": false
      }
    },
    "required": [
      "accessToken",
      "refreshToken",
      "user"
    ],
    "additionalProperties": false
  },
  "update-profile": {
    "type": "object",
    "properties": {
      "displayName": {
        "type": "string",
        "minLength": 2,
        "maxLength": 50
      },
      "avatarUrl": {
        "type": "string",
        "format": "uri",
        "nullable": true
      },
      "bio": {
        "type": "string",
        "maxLength": 500,
        "nullable": true
      },
      "location": {
        "type": "string",
        "maxLength": 100,
        "nullable": true
      },
      "preferencesJson": {
        "type": "object",
        "additionalProperties": {},
        "nullable": true
      }
    },
    "additionalProperties": false
  },
  "create-exchange": {
    "type": "object",
    "properties": {
      "responderId": {
        "type": "string",
        "pattern": "^[cC][^\\s-]{8,}$"
      },
      "requestedItemTitle": {
        "type": "string",
        "minLength": 2,
        "maxLength": 100
      },
      "offeredItemTitle": {
        "type": "string",
        "minLength": 2,
        "maxLength": 100
      }
    },
    "required": [
      "responderId",
      "requestedItemTitle",
      "offeredItemTitle"
    ],
    "additionalProperties": false
  },
  "update-exchange-status": {
    "type": "object",
    "properties": {
      "status": {
        "type": "string",
        "enum": [
          "PENDING",
          "ACCEPTED",
          "DECLINED",
          "COMPLETED",
          "CANCELLED"
        ]
      }
    },
    "required": [
      "status"
    ],
    "additionalProperties": false
  },
  "pagination": {
    "type": "object",
    "properties": {
      "page": {
        "type": "integer",
        "minimum": 1,
        "default": 1
      },
      "limit": {
        "type": "integer",
        "minimum": 1,
        "maximum": 100,
        "default": 20
      }
    },
    "additionalProperties": false
  }
}